@model PhotoBank.ViewModels.TagsPhotoIndexViewModel
<div style="padding:4px">
    <form asp-action="UploadPhoto" asp-controller="Photo"
          method="post"
          enctype="multipart/form-data">
        <input type="file" name="files" />
        <input type="text" name="photoName" />
        <input type="submit" value="Upload selected fies" />
    </form>
</div>

@foreach (var photo in Model.Photos)
{
    var base64 = Convert.ToBase64String(photo.Data);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    var id = photo.PhotoID;
    var name = photo.Name;
    <table>
        <tr>
            <td>
                @name<br />
                <img src="@imgSrc" style="height:100px; width:100px; border:4px double black" />                
            </td>
            <td valign="top"> 
                @if (photo.PhotoTags.Count > 0)
                {
                    <table>
                        @foreach (var tag in photo.PhotoTags)
                        {
                        <tr>
                            <td style="padding-left:10px">
                                <a asp-controller="Tags" asp-action="TagPhotos" asp-route-tagID=@tag.Tag.TagID>@tag.Tag.TagPhrase</a>
                            </td>    
                        </tr>
                        }
                    </table>
                }
                <select asp-items="@Model.TagSelectionList" style="margin-left:10px" id="tagList" onchange="AttachTagToPhoto(this.value, @id)">
                    <option>Select tag</option>
                </select>
            </td>
            <td>
                <a asp-controller="Photo" asp-action="DownloadPhoto" asp-route-photoID=@id>Download Photo</a>
            </td>
        </tr>
        <tr>
            <td>
                <a asp-controller="Photo" asp-action="DeletePhoto" asp-route-photoIndex=@id>Delete</a>
            </td>
        </tr>
    </table>
}
